<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_branch_ir_sequence_view_" model="ir.ui.view">
            <field name="name">ir.sequence.view.res.branch</field>
            <field name="model">res.branch</field>
            <field name="inherit_id" ref="branch.branch_res_branch_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="replace">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        </div>
                        <field name="branch_logo" widget='image' class="oe_avatar" options='{"size": [90, 90]}'/>
                        <div class="oe_title">
                            <h1>
                                <field name="name" default_focus="1" placeholder="Name" />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="company_id"/>
                                <field name="telephone"/>

                                <span class="o_form_label o_td_label" name="address_name">
                                    <b>Address</b>
                                </span>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street"
                                    />
                                    <field name="street2" placeholder="Street 2..." class="o_address_street"
                                    />
                                    <field name="city" placeholder="City" class="o_address_city"
                                    />
                                    <field name="state_id" class="o_address_state" placeholder="State"
                                           options="{'no_open': True, 'no_quick_create': True}"/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"
                                    />
                                    <field name="country_id" placeholder="Country" class="o_address_country"
                                           options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>

                                    <div class="o_row">
                                        <field name="building_no" placeholder="Building No..." class="oe_inline"/>
                                        <field name="district" placeholder="District..." class="oe_link oe_inline"/>
                                        <field name="postal_code" placeholder="Postal Code..."
                                               class="oe_link oe_inline"/>
                                    </div>
                                    <div class="o_row">
                                        <field name="additional_no" placeholder="Additional No..." class="oe_inline"/>
                                        <field name="other_id" placeholder="Other..." class="oe_link oe_inline"/>
                                    </div>
                                </div>


                            </group>
                            <group>
                                <field name="apply_prefix"/>
                                <field name="prefix" attrs="{'invisible':[('apply_prefix','=',False)],'required':[('apply_prefix','=',True)]}"/>
                            </group>
                        </group>
                    </sheet>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
