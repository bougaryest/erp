<odoo>
    <template id="report_tax_invoice_document_bougary">
        <t t-call="bougary_advanced.external_layout_bougary">
           <t t-set="o" t-value="o.with_context(lang=lang)"/>
            <div class="page">
                <table class="table table table-sm">
                    <tr>
                        <td style="width:20%;border:medium none;">
                            <strong>Date:</strong>
                        </td>
                        <td style="width:30%;border:medium none;">
                            <span t-field="o.invoice_date"/>
                        </td>
                        <td style="width:20%;border:medium none;">
                            <!--                            <strong>Page:</strong>-->
                        </td>
                        <td style="width:30%;border:medium none;">
                            <div class="text-muted">

                                <!--                                <span class="page"/>-->
                                <!--                                /-->
                                <!--                                <span class="topage"/>-->
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td style="width:20%;border:medium none;">
                            <strong>Salesman No:</strong>
                        </td>
                        <td style="width:30%;border:medium none;">
                            <span t-field="o.invoice_user_id.name"/>
                        </td>
                        <td style="width:20%;border:medium none;">
                            <strong t-if="o.invoice_line_ids.mapped('sale_line_ids.warehouse_id')">Store:</strong>
                        </td>
                        <td style="width:30%;border:medium none;">
                            <span t-esc="o.invoice_line_ids.mapped('sale_line_ids.warehouse_id').name"/>
                        </td>

                    </tr>
                </table>
                <div style="width:100%;min-height:20%;background:#d4d9db;color:black;border-radius: 10px; border: 1px solid #d4d9db;border-collapse: separate !important;">
                    <table class="table table table-sm">
                        <tr>
                            <td style="width:60%;border:medium none;">
                                <strong>Messers:</strong>
                            </td>
                            <td style="text-align:center;border:medium none;">
                                <span t-field="o.narration"/>
                            </td>
                            <td style="width:60%;border:medium none;">
                                <strong>P.O No.:</strong>
                            </td>
                            <td style="text-align:center;border:medium none;">
                                    <span t-field="o.po_no"/>
                            </td>
                        </tr>

                    </table>
                </div>
                <br/>
                <table class="table-sm" style="width:100%;border-radius: 5px;border-collapse: separate !important;">

                    <thead>
                        <tr style="">
                            <th class="text-center"
                                style="background:black;color:white;border-radius: 10px;border-collapse: separate !important;">
                                Item No.
                            </th>
                            <th class="text-center"
                                style="background:black;color:white;border-radius: 10px;border-collapse: separate !important;">
                                Item Name
                            </th>
                            <th class="text-center"
                                style="background:black;color:white;border-radius: 10px;border-collapse: separate !important;">
                                Qty.
                            </th>

                            <th class="text-center"
                                style="background:black;color:white;border-radius: 10px;border-collapse: separate !important;">
                                Price
                            </th>
                            <th class="text-center"
                                style="background:black;color:white;border-radius: 10px;border-collapse: separate !important;">
                                Total
                            </th>

                        </tr>
                    </thead>
                    <tbody class="invoice_tbody">
                        <t t-set="current_subtotal" t-value="0"/>
                        <t t-set="lines"
                           t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>
                        <t t-set="index" t-value="0"/>
                        <t t-foreach="lines" t-as="line">
                            <t t-set="index" t-value="index + 1"/>
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                               groups="account.group_show_line_subtotals_tax_excluded"/>
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                               groups="account.group_show_line_subtotals_tax_included"/>

                            <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                    <td class="text-center"
                                        style="border-radius: 5px; border: 1px solid black;border-collapse: separate !important;">
                                        <span t-esc="index" class="text-center"/>
                                    </td>
                                    <td class="text-center"
                                        style="border-radius: 5px; border: 1px solid black;border-collapse: separate !important;"
                                    >
                                        <span t-field="line.name"/>
                                    </td>

                                    <td class="text-center"
                                        style="border-radius: 5px; border: 1px solid black;border-collapse: separate !important;"
                                    >
                                        <span t-field="line.quantity"/>
                                    </td>
                                    <td class="text-center"
                                        style="border-radius: 5px; border: 1px solid black;border-collapse: separate !important;">
                                        <span style="padding:0px !important" t-field="line.price_unit"
                                              t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>

                                    <td class="text-center"
                                        style="border-radius: 5px; border: 1px solid black;border-collapse: separate !important;">
                                        <span t-field="line.price_total"
                                              t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_section'">
                                    <td colspan="99">
                                        <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                    </td>
                                    <t t-set="current_section" t-value="line"/>
                                    <t t-set="current_subtotal" t-value="0"/>
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <td colspan="99">
                                        <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                    </td>
                                </t>
                            </tr>

                            <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                <tr class="is-subtotal text-left">
                                    <td colspan="99">
                                        <strong class="mr16">Subtotal</strong>
                                        <span
                                                t-esc="current_subtotal"
                                                t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                        />
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>

                </table>
                <table class="table-sm" style="width:100%;border-radius: 5px;border-collapse: separate !important;">
                    <tr>
                        <td style="width:60%;border-radius: 5px; border: 0px solid black;border-collapse: separate !important;">
                        </td>
                        <td style="border-radius: 5px; border: 1px solid black;border-collapse: separate !important;">
                            <strong>Gross Total:</strong>
                            <span t-attf-style="#{'float: left' if 'ar' in lang else 'float: right'}"
                                  t-field="o.amount_untaxed"/>
                        </td>

                    </tr>
                    <tr>
                        <td style="width:60%;border-radius: 5px; border: 0px solid black;border-collapse: separate !important;">
                        </td>
                        <td style="border-radius: 5px; border: 1px solid black;border-collapse: separate !important;">
                            <strong>Discount:</strong>
                            <span t-attf-style="#{'float: left' if 'ar' in lang else 'float: right'}"
                                  t-field="o.total_discount"
                                  t-options='{"widget": "monetary", "display_currency": currency}'/>
                        </td>

                    </tr>
                    <tr>
                        <td style="width:60%;border-radius: 5px; border: 0px solid black;border-collapse: separate !important;">
                        </td>
                        <td style="border-radius: 5px; border: 1px solid black;border-collapse: separate !important;">
                            <strong>Vat:</strong>
                            <span t-attf-style="#{'float: left' if 'ar' in lang else 'float: right'}"
                                  t-field="o.amount_tax"/>
                        </td>

                    </tr>
                    <tr>
                        <td style="width:60%;border-radius: 5px; border: 0px solid black;border-collapse: separate !important;">
                        </td>
                        <td style="border-radius: 5px; border: 1px solid black;border-collapse: separate !important;">
                            <strong>Net Total</strong>
                            <span t-attf-style="#{'float: left' if 'ar' in lang else 'float: right'}"
                                  t-field="o.amount_total"/>
                        </td>

                    </tr>

                </table>
                <div t-if="not is_html_empty(o.narration)" name="comment">
                    <span t-field="o.narration"/>
                </div>


            </div>

        </t>
    </template>

    <template id="report_invoice_bougary">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="lang"
                   t-value="o.partner_id.sudo().lang if o.sudo().partner_id else o.invoice_user_id.sudo().lang"/>
                <t
                   t-call="bougary_advanced.report_tax_invoice_document_bougary" t-lang="lang"/>
            </t>
        </t>
    </template>
    <record id="action_report_invoice_bougary" model="ir.actions.report">
        <field name="name">Invoice</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">bougary_advanced.report_invoice_bougary</field>
        <field name="report_file">bougary_advanced.report_invoice_bougary</field>
        <field name="print_report_name"></field>
        <field name="attachment"></field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
    </record>


</odoo>