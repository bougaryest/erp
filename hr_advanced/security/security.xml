<odoo>
    <data noupdate="1">
        <record id="access_own_profile_employee_rule" model="ir.rule">
            <field name="name">Employee Access Own Profile</field>
            <field name="model_id" ref="model_hr_employee"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="domain_force">[('user_id', '=',user.id)]</field>
        </record>

        <record id="access_all_profiles_officer_rule" model="ir.rule">
            <field name="name">Officer Access All Profiles</field>
            <field name="model_id" ref="model_hr_employee"/>
            <field name="groups" eval="[(4, ref('hr.group_hr_user'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>

        <record id="group_show_timesheets_employees_for_manager" model="res.groups">
            <field name="name">Show Timesheets of Employees for Manager</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>
        <record id="access_show_timesheets_employees_for_manager_rule" model="ir.rule">
            <field name="name">Show Timesheets of Employees for Manager Rule</field>
            <field name="model_id" ref="hr_timesheet.model_account_analytic_line"/>
            <field name="groups" eval="[(4, ref('hr_advanced.group_show_timesheets_employees_for_manager'))]"/>
            <field name="domain_force">[('user_id.employee_parent_id.user_id', '=',user.id)]</field>
        </record>

    </data>
</odoo>