<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_employee_inherit_form" model="ir.ui.view">
            <field name="name">view.hr.employee.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='mobile_phone']" position="before">
                    <field name="arabic_name"/>
                    <field name="ref"/>
                </xpath>
                <xpath expr="//field[@name='birthday']" position="after">
                    <field name="age"/>
                </xpath>

                <xpath expr="//page[@name='personal_information']/group[1]" position="inside">
                    <group name="other_information" string="Other">
                        <field name="emp_id"/>
                        <field name="iqama_no"/>
                        <field name="iqama_expiry_date"/>
                        <field name="gosi"/>
                        <field name="position_iqama"/>
                        <field name="insurance_class"/>
                        <field name="sponsorship"/>
                         <field name="payment_type"/>
                    </group>
                </xpath>

            </field>
        </record>
    </data>
</odoo>