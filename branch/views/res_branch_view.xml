<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Form View of branch-->
        <record id="branch_res_branch_view_form" model="ir.ui.view">
            <field name="name">branch.res.branch.view.form</field>
            <field name="model">res.branch</field>
            <field name="arch" type="xml">
                <form string="Branch">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="company_id"/>
                                <field name="telephone"/>
                                <span class="o_form_label o_td_label" name="address_name">
                                    <b>Address</b>
                                </span>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street"
                                    />
                                    <field name="street2" placeholder="Street 2..." class="o_address_street"
                                    />
                                    <field name="city" placeholder="City" class="o_address_city"
                                    />
                                    <field name="state_id" class="o_address_state" placeholder="State"
                                           options="{'no_open': True, 'no_quick_create': True}"/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"
                                    />
                                    <field name="country_id" placeholder="Country" class="o_address_country"
                                           options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>

                                    <div class="o_row">
                                        <field name="building_no" placeholder="Building No..." class="oe_inline"/>
                                        <field name="district" placeholder="District..." class="oe_link oe_inline"/>
                                        <field name="postal_code" placeholder="Postal Code..."
                                               class="oe_link oe_inline"/>
                                    </div>
                                    <div class="o_row">
                                        <field name="additional_no" placeholder="Additional No..." class="oe_inline"/>
                                        <field name="other_id" placeholder="Other..." class="oe_link oe_inline"/>
                                    </div>
                                </div>


                            </group>
                            <group>
                                <!--                                <field name="address"/>-->
                                <field name="phone"/>
                                <field name="email"/>
                                <field name="website"/>
                                <field name="vat"/>
                                <field name="company_registry"/>
                                <field name="picking_type_ids" options="{'no_create': True, 'no_edit': True}"
                                       widget="many2many_tags"/>
                                <field name="warehouse_ids" options="{'no_create': True, 'no_edit': True}"
                                       widget="many2many_tags"/>


                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View of branch-->
        <record id="branch_res_branch_view_tree" model="ir.ui.view">
            <field name="name">branch.res.branch.view.tree</field>
            <field name="model">res.branch</field>
            <field name="arch" type="xml">
                <tree string="Branch">
                    <field name="name"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <!--View action for branch form view and tree view-->
        <record id="branch_action_res_branch" model="ir.actions.act_window">
            <field name="name">Branch</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.branch</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click here to create a new branch.
                </p>
            </field>
        </record>

        <!-- This Menu Item Must have a parent -->
        <menuitem id="branch_menu_res_branch" name="Branch" parent="base.menu_users" action="branch_action_res_branch"/>

    </data>
</odoo>
