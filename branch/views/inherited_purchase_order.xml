<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="purchase_requisition_form_branch" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit.branch</field>
            <field name="model">purchase.requisition</field>
            <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_form"/>
            <field name="arch" type="xml">


                <field name="picking_type_id" position="after">
                    <field name="branch_id"/>
                </field>
            </field>
        </record>

        <record id="purchase_order_form_inherit_branch" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit.branch</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">

                <field name="picking_type_id" position="after">
                    <field name="branch_id"/>
                </field>
                <xpath expr="//field[@name='order_line']" position="attributes">
                    <attribute name="context">{'branch_id' : branch_id}</attribute>
                </xpath>
            </field>
        </record>

        <record id="purchase_order_form_branch_readonly" model="ir.ui.view">
            <field name="name">purchase.order.form.branch.readonly</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="branch.purchase_order_form_inherit_branch"/>
            <field name="groups_id" eval="[(6, 0, [ref('branch.group_not_select_branch')])]"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='branch_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_purchase_order_filter_inherit_branch" model="ir.ui.view">
            <field name="name">view.purchase.order.filter.inherit.branch</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
            <field name="arch" type="xml">
                <search>
                    <field name="branch_id"/>
                </search>
                <xpath expr="//group" position="inside">
                    <filter string="Branch" name="branch" domain="[]" context="{'group_by':'branch_id'}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>