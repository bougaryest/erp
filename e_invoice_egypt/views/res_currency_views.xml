<odoo>
    <record id="view_e_invoice_egypt_res_currency_form" model="ir.ui.view">
        <field name="name">view.e.invoice.egypt.res.currency.form</field>
        <field name="model">res.currency</field>
        <field name="inherit_id" ref="base.view_currency_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="iso_code" required="1"/>
            </xpath>
        </field>
    </record>
</odoo>