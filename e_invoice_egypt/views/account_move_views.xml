<odoo>
    <record id="view_e_invoice_egypt_account_move_form" model="ir.ui.view">
        <field name="name">view.e.invoice.egypt.account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="after">
                <field name="e_invoice_state" widget="statusbar" statusbar_visible="draft,submitted"
                       attrs="{'invisible': [('move_type', 'in', ['entry','out_receipt','in_receipt'])]}"/>
            </xpath>
            <xpath expr="//field[@name='state']" position="before">
                <button name="action_send_e_invoice" string="ETA Send" class="oe_highlight" type="object"
                        attrs="{'invisible': ['|','|',('state', '!=', 'posted'),('e_invoice_state', 'not in', ['draft','submitted','invalid']), ('move_type', 'in', ['entry','out_receipt','in_receipt'])]}"/>
                <button name="get_state_e_invoice_document" string="Get ETA Status" class="oe_highlight" type="object"
                        attrs="{'invisible': ['|','|',('state', '!=', 'posted'),('e_invoice_state', '=', 'draft'), ('move_type', 'in', ['entry','out_receipt','in_receipt'])]}"/>
                <button name="print_e_invoice_document" string="Print Document" class="oe_highlight" type="object"
                        attrs="{'invisible': ['|','|',('state', '!=', 'posted'),('e_invoice_state', 'in', ['draft','submitted','invalid']), ('move_type', '=', 'entry')]}"/>

            </xpath>
            <xpath expr="//page[@name='other_info']" position="after">
                <page string="E-Invoice" name="e_invoice_info"
                      attrs="{'invisible': [('move_type', 'in', ['entry','out_receipt','in_receipt'])]}">
                    <group>
                        <group>
                            <field name="taxpayer_activity_code_id" required="1"
                                   options="{'no_open': True,'no_create':True}"
                                   attrs="{'readonly': [('e_invoice_state', 'not in', ['draft','submitted','invalid'])]}"/>
                            <field name="submissionId"/>
                            <field name="uuid"/>
                        </group>
                        <group>
                            <field name="longId"/>
                            <field name="hash_key"/>
                        </group>
                    </group>
                    <group>
                        <field name="error_rejected"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>