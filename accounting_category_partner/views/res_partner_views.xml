<odoo>
    <record id="view_accounting_category_partner_res_partner_filter_filter" model="ir.ui.view">
        <field name="name">view.view.res.partner.filter.filter</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='group_country']" position="after">
                <filter string="Category" name="group_by_account_category" domain="[]"
                        context="{'group_by': 'partner_account_category_id'}"/>
            </xpath>
        </field>
    </record>


    <record id="view_res_partner_inherit_form" model="ir.ui.view">
        <field name="name">view.res.partner.inherit.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <field name="partner_account_category_id"
                       context="{'form_view_ref': 'accounting_category_partner.view_res_partner_account_category_form'}"/>
            </xpath>
        </field>
    </record>


</odoo>